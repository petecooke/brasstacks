<!DOCTYPE html>
<html>
<head>
  <title>Brasstacks</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        <!-- <a class="navbar-brand" href="#">BrassTacks</a> -->
        <%= link_to 'BrassTacks', root_path, :class => 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if current_user && current_user.admin  %>
          <li>
            <%= link_to charts_path do %>
              <i class="glyphicon glyphicon-hand-right"></i>
              View Charts
            <% end %>
          </li>
        <% end %>
        <li>
          <%= link_to race_levels_path do %>
            <i class="glyphicon glyphicon-hand-right"></i>
            Race Levels
          <% end %>
        </li>  
        <li>
          <%= link_to horses_path do %>
            <i class="glyphicon glyphicon-magnet"></i>
            Horses
          <% end %>
        </li>         
        <li>
          <%= link_to jockeys_path do %>
            <i class="glyphicon glyphicon-hand-right"></i>
            Jockeys
          <% end %>
        </li> 
        <li>
          <%= link_to trainers_path do %>
            <i class="glyphicon glyphicon-hand-right"></i>
            Trainers
          <% end %>
        </li>        
        <li>
          <%= link_to owners_path do %>
            <i class="glyphicon glyphicon-hand-right"></i>
            Owners
          <% end %>
        </li>  
        <% if current_user && current_user.admin  %>
          <li>
            <%= link_to new_chart_path do %>
              <i class="glyphicon glyphicon-upload"></i>
              Add a Chart
            <% end %>
          </li>  
          <% end %>
          <% if current_user %>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <i class="glyphicon glyphicon-user"></i>
                Sign out
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="glyphicon glyphicon-user"></i>
                Sign in
              <% end %>
            </li>
          <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>
